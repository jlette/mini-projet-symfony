{% extends "base.html.twig"%}

{% block body %}

<table class="table table-striped table-hover text-center">
                <thead class="bg-light text-dark">
                    <tr>
                    <th>Id</th>
                    <th>Titre</th>
                    <th>Date de publication</th>
                    <th>Résumé</th>
                    <th>Reference</th>
                    <th>Catégorie</th>
                    </tr>
                </thead>
                <tbody>
                        <tr>
                            <td>{{ livre.id }}</td>
                            <td>{{ livre.titre }}</td>
                            <td>{{ livre.datepublication | date("d/m/Y") }}</td>
                            <td>{{ livre.resume }}</td>
                            <td>{{ livre.reference }}</td>
                            <td>{{ livre.categories.nom }}</td>
                        </tr>
                   
                </tbody>
            </table> 
{% endblock %}
        
